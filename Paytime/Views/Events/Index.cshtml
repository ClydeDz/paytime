@model Paytime.Models.ViewModel.AuditViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Events";

}
@section CustomCss{
    <link href="http://kendo.cdn.telerik.com/2016.2.714/styles/kendo.common-bootstrap.min.css" rel="stylesheet" />
    <link href="http://kendo.cdn.telerik.com/2016.2.714/styles/kendo.bootstrap.min.css" rel="stylesheet" />  
    <link href="http://kendo.cdn.telerik.com/2016.2.714/styles/kendo.bootstrap.mobile.min.css" rel="stylesheet" /> 
}
<div ng-app="paytime">
    <div class="row inner-body">
        <div class="col-xs-12">
            <h2>Events</h2>
            <p>
                This is where you see the events that you have added, edit them or even add a new event.
            </p>
        </div>
    </div>
    <div ng-view></div>
    <br />
    <div class="row inner-body">
        <div class="col-xs-12 col-md-4">
            <h2>Logs</h2>
        </div>
    </div>
    <div class="row inner-body">        
        <div class="col-xs-12 col-md-12">
            @if(Model.Status.ToString().ToLower() == "up")
            { <b>Status: </b><span class="label label-success">@Model.Status.ToString() </span> }
            else
            { <b>Status: </b><span class="label label-danger">@Model.Status.ToString() </span> }            
        </div>
        <div class="col-xs-12 col-md-12">
            <b>Last Run: </b>@Model.LastModifiedOn.ToString()
        </div>
        <div class="col-xs-12 col-md-12">
            <b>Comments: </b>@Model.Comments.ToString()
        </div>
    </div>
    <div></div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular-route.min.js"></script>
    <script src="~/Scripts/js/app.js"></script>
    <script src="~/Scripts/js/appController.js"></script>
    <script src="http://kendo.cdn.telerik.com/2016.2.714/js/kendo.all.min.js"></script>
}

