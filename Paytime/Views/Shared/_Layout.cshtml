<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Paytime by Clyde D'Souza</title>
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("CustomCss", false)
</head>
<body>
    <!-- Menu -->
    <div class="page-header">
        <nav class="menu" id="theMenu">
            <div class="menu-wrap">
                @{
                    var currentController = ViewContext.RouteData.Values["controller"] as string ?? "Home";
                    var currentPage = (currentController).ToLower();
                }
                <a href="@Url.Action("Index", "Home")" class="@(currentPage == "home" ? "active" : "")" data-toggle="tooltip" data-placement="left" title="Home"><i class="ion-ios-home-outline"></i></a>
                <a href="@Url.Action("Index", "Events")" class="@(currentPage == "events" ? "active" : "")" data-toggle="tooltip" data-placement="left" title="Events"><i class="ion-ios-calendar-outline"></i></a>
                @if (currentPage == "events")
                {
                    <a href="#/" class="" data-toggle="tooltip" data-placement="left" title="View all events"><i class="ion-ios-list-outline"></i></a>
                    <a href="#/add" class="" data-toggle="tooltip" data-placement="left" title="Add a new event"><i class="ion-ios-plus-outline"></i></a>
                }     
                <a href="@Url.Action("Index", "UpcomingEvents")" class="@(currentPage == "upcomingevents" ? "active" : "")" data-toggle="tooltip" data-placement="left" title="View upcoming events"><i class="ion-ios-clock-outline"></i></a>           
                @if (Request.IsAuthenticated)
                {
                    <a href="@Url.Action("Index", "Account")" class="@(currentPage == "account" ? "active" : "")" data-toggle="tooltip" data-placement="left" title="Account information"><i class="ion-ios-person"></i></a>
                }                
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
        <div class="media">
            <div class="media-left">
                <img src="~/Content/images/paytime-icon.png" width="80" height="80" class="media-object" />
            </div>
            <div class="media-body">
                <h1 class="media-heading">Paytime</h1>
                <p>Reminding you to pay on time</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Paytime</p>
            <p>Crafted by <a href="http://clyde.nz">Clyde D'Souza</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>

